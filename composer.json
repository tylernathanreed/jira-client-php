{
    "name": "jira/client",
    "authors": [
        {
            "name": "Tyler Reed",
            "email": "tylernathanreed@gmail.com"
        }
    ],
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "guzzlehttp/guzzle": "^7.8.2",
        "guzzlehttp/uri-template": "^1.0"
    },
    "require-dev": {
        "laravel/pint": "^1.20",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.0",
        "symfony/console": "^7.0",
        "symfony/process": "^7.0",
        "symfony/var-dumper": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Jira\\Client\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jira\\CodeGen\\": "codegen/",
            "Tests\\": "tests/"
        },
        "files": [
            "codegen/helpers.php"
        ]
    },
    "bin": [
        "bin/jira"
    ],
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test:lint": "pint",
        "test:static": "phpstan analyze",
        "test:suite": "phpunit",
        "test:coverage": "XDEBUG_MODE=coverage phpunit --coverage-php ./.cache/phpunit/coverage.php && bin/jira coverage --compact"
    }
}
